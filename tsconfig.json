{
  "compilerOptions": {
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true
  }
}
